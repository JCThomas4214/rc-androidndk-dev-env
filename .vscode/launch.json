{
    "version": "0.1.0",
    "configurations": [
        {
            "name": "GDB Attach (port: 5039)",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/src/main",
            "cwd": "${workspaceFolder}",
            "MIMode": "gdb",
            "miDebuggerPath": "/mats/ndk/android-ndk-r20/prebuilt/linux-x86_64/bin/gdb",
            "miDebuggerServerAddress": ":5039",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "environment": [{"name": "ENV", "value": "DEBUG"}],
            "preLaunchTask": "Run GDB Server"
        }
    ]
}